<!-- mvc:sap.ui.core.mvc allow us to load other XML views in our main view-->
<!-- display-block true allow us to render the panels-->
<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" controllerName="logaligroup.SAPUI5.controller.App" displayBlock="true">
    <Shell id="shellId">
        <App id="appId">
            <!-- Set properties to xml view in order to have a responsive web page-->
            <pages>
                <!-- We can have multiple pages-->
                <Page title="{i18n>appTitle}" id="pageId" titleAlignment="Center" >
                    <content>
                        <!-- Here we link the Hello Panel view to the main view-->
                        <mvc:XMLView id="_IDGenXMLView1" viewName="logaligroup.SAPUI5.view.HelloPanel" />
                        <!-- Here we link the list view to the main view-->
                        <mvc:XMLView id="_IDGenXMLView2" viewName="logaligroup.SAPUI5.view.InvoiceList" />
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
