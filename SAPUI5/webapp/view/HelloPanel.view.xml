<!-- xmlns:core=sap.ui.core allow us to load the fragments-->
<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" controllerName="logaligroup.SAPUI5.controller.HelloPanel" displayBlock="true" xmlns:core="sap.ui.core">
    <Panel headerText="{i18n>helloPanel}" id="panelId" >
        <content>
            <!-- All the content must be inside of this agregation-->
            <Button id ="helloDialogButton" 
            icon="sap-icon://popup-window" 
            text="{i18n>showHelloDialog}" 
            press=".onOpenDialog" 
            class="sapUiSmallMarginEnd" />
            <Button id="_IDGenButton1" text="{i18n>showHelloButton}" press=".onShowHello" class="sapUiSmallMarginEnd" />
            <Input id="button" value="{/recipient/name}" valueLiveUpdate="true" width="40%" />
            <Text id="_IDGenText1" text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements sapThemeHighlight-asColor" />
        </content>
    </Panel>
    <core:Fragment fragmentName="logaligroup.SAPUI5.view.Form01" type="XML" />
</mvc:View>
