 <!-- Fragment definition-->
 <!-- xmlns:f sap.ui.layout.form is the sap libary for the forms  -->
 <!-- label for value must be the same to the Input id to what it's linked-->
 <!-- sap.ui.core allow us to load fragments-->
<core:FragmentDefinition id="_IDGenFragmentDefinition1" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
  <Panel id="_IDGenPanel1" headerText="{i18n>panelFrTitle}" class="sapUiResponsiveMargin" width="50%">
     <f:SimpleForm id="_IDGenSimpleForm1" editable="true">
         <f:content>
           <Label id="_IDGenLabel1" text="{i18n>labelPerson}" labelFor="persName"/> 
           <Input id="persName" width ="40%"/>
         </f:content>

    </f:SimpleForm>
  </Panel>

</core:FragmentDefinition>
